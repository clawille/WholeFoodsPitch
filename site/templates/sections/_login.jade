.container-fluid
    .row
        .col-xs-12.col-md-6.col-lg-4.col-md-offset-3.col-lg-offset-4
            .form-container
                .row.images-logos
                    .brand-logo.col-xs-7.animated.fadeInRight.delay-3s
                        img.img-responsive(src="images/whole-foods-icon.png" width="284px")

                    .col-xs-2.animated.fadeIn
                        .slash-line

                    .digitas-logo.col-xs-3.animated.fadeInLeft.delay-3s
                        img.img-responsive(src="images/digitas-logo.png" width="99px")

                .row
                    .col-xs-10.col-xs-offset-1
                        form.form.animated.fadeIn
                            input.form-control#password(type="password")(placeholder="Password")
                            button.btn.btn-default#signin(type="submit")
                                img(src="images/arrow-right.png")